#!/usr/bin/env bash

# Initialize loop counter
counter=1

# Begin the loop
while [ "$counter" -le 20 ]
do
    # Display the current number
    echo "$counter"

    # Check condition and display appropriate message
    case $counter in
        4)
            echo "bad luck from China"
            ;;
        9)
            echo "bad luck from Japan"
            ;;
        17)
            echo "bad luck from Italy"
            ;;
    esac

    # Increment the counter
    ((counter++))
done

